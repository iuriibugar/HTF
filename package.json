{
  "name": "htf",
  "version": "1.0.2",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:e2e": "playwright test",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "build:firebase": "cross-env DEPLOY_TARGET=firebase npm run build",
    "deploy:firebase": "npm run build:firebase && firebase deploy",
    "build:github": "cross-env DEPLOY_TARGET=github npm run build",
    "deploy:github": "npm run build:github && gh-pages -d dist -r https://github.com/iuriibugar/HTF.git",
    "deploy": "npm run deploy:github"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "firebase": "^12.6.0",
    "tailwindcss": "^4.1.17",
    "vue": "^3.5.25",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tsconfig/node22": "^22.0.5",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vitejs/plugin-vue-jsx": "^5.1.2",
    "@vue/tsconfig": "^0.8.1",
    "cross-env": "^10.1.0",
    "gh-pages": "^6.3.0",
    "npm-run-all2": "^8.0.4",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-vue-devtools": "^8.0.5",
    "vue-tsc": "^3.1.5"
  }
}
